<!DOCTYPE html>

<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <title>Room '{{ name }}'</title>

  <link href="/static/css/room.css" rel="stylesheet">
</head>

<body>
  <h1>Welcome to '{{ name }}'</h1>

  <div id="newThreadBox">
    <p id="newThreadInfoBox"></p>

    <form id="newThreadForm">
      <textarea name="content" placeholder="Type a new thread message here." required></textarea>
      <input type="submit" value="Start the thread">
    </form>
  </div>

  <div id="search-box">
    <input type="text" id="searchText" placeholder="Write your search terms here.">
    <button id="clearSearchButton">Clear</button>
  </div>

  <div id="message-box"></div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/mark.js/8.11.1/mark.min.js"></script>
  <script>const roomName = '{{ name }}';</script>
  <script src="/static/js/room.js"></script>
</body>

</html>
