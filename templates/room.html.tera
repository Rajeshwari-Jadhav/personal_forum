<!DOCTYPE html>

<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <title>Room '{{ name }}'</title>

  <link href="/static/css/base.css" rel="stylesheet">
</head>

<body>
  <nav>
    <a href="/">Personal forum</a>
    <input list="rooms-seen" id="go-to-room" placeholder="Go to another room">
    <datalist id="rooms-seen"></datalist>

    <div id="colors-dropdown">
      <button onclick="toggleColorsDropdown();" id="colors-dropdown-button">üñåÔ∏è</button>
      <div id="colors-dropdown-content" class="dropdown-content">
        <button onclick="changeTheme(LIGHT_THEME);">Light</button>
        <button onclick="changeTheme(DARK_THEME);">Dark</button>
        <form action="/colors">
          <button>Customize</button>
        </form>
      </div>
    </div>
  </nav>

  <h1>Welcome to '{{ name }}'</h1>

  <div id="new-thread-box">
    <p id="new-thread-info"></p>

    <form id="new-thread-form">
      <textarea name="content" placeholder="Type a new thread message here." required></textarea>
      <input type="submit" value="Start the thread">
    </form>
  </div>

  <div id="search-box">
    <input type="text" id="search-text" placeholder="Write your search terms here.">
    <button id="clear-search-button">Clear</button>
  </div>

  <div id="message-box"></div>

  <!-- Dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/mark.js@8.11.1/dist/mark.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/findandreplacedomtext@0.4.6/src/findAndReplaceDOMText.min.js"></script>

  <!-- Custom scripts -->
  <script>const roomName = '{{ name }}';</script>
  <script src="/static/js/base.js"></script>
  <script src="/static/js/room.js"></script>
</body>

</html>
